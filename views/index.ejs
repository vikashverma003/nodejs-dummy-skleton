<%- include('header') %>

    
    <div class="container">
      <div class="row">
        <h2 class="text-center"><%= title %></h2>
          <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"> Login</div>
                       </div>  
                  <div class="panel-body" >
                      <form action="/" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                        <% if(msg !=''){ %>
                          <div id="signupalert"  class="alert alert-danger">
                            <p style="text-align: center">   <%= msg %></p>
                          </div>
                          <% } %>
                          <div class="form-group">
                              <label for="username" class="col-md-3 control-label">User Name</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="uname" placeholder="Enter Your User Name">
                              </div>
                          </div>
                            
                          <div class="form-group">
                              <label for="password" class="col-md-3 control-label">Password</label>
                              <div class="col-md-9">
                                  <input type="password" class="form-control" name="password" placeholder="Enteryour password">
                              </div>
                          </div>  <div class="form-group">
                              <!-- Button -->                                        
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="login" class="btn btn-primary">   
                              </div>
                          </div>
                          <p>If you don't have account <a href="/signup">Create New Acoount</a></p>
                          
                      </form>
                   </div>
              </div>
  
          
   </div> 
      </div>
    </div>
    <%- include('footer') %>
